<!-- Sidenav -->
{{>sidebar}}
<!-- Main content -->
<div class="main-content">
    <!-- Top navbar -->
    {{>navbar}}
    <!-- Header -->
    {{>header}}
    {{!-- <div style="width: 100%;height:120px">

    </div> --}}
    <!-- Page content -->
    <div class="container-fluid mt--7">
        <!-- Table -->
        <div class="row">
            <div class="col">
                <div class="card shadow">
                    <div class="card-header border-0">
                        <h3 class="mb-0">Turbine Specifications list</h3>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Installed Date</th>
                                    <th scope="col">Rate power</th>
                                    <th scope="col">Address</th>
                                    <th scope="col">Status</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each turbines}}
                                <tr class="list-turbine-item" style="cursor:pointer">
                                    <th scope="row">
                                        <span class="mb-0 text-sm">{{this._id}}</span>
                                        {{#if (compare this.statusNetwork "connected")}}
                                        <i style="font-size:12px;padding: 0px 20px;color:#27C927"
                                            class="fa-solid fa-wifi"></i>
                                        {{else}}
                                        <i style="font-size:12px;padding: 0px 20px;color:#C92522"
                                            class="fa-solid fa-wifi"></i>
                                        {{/if}}
                                    </th>
                                    <td>
                                        {{this.installed_date}}
                                    </td>
                                    <td>
                                        {{this.power}}kW
                                    </td>
                                    <td>
                                        {{this.location.address}}
                                    </td>
                                    {{#if (compare this.operatingStatus "Active")}}
                                    <td style="color: #2FBD2C;">
                                        {{this.operatingStatus}}
                                    </td>
                                    {{/if}}
                                    {{#if (compare this.operatingStatus "Inactive")}}
                                    <td style="color: #BA2020;">
                                        {{this.operatingStatus}}
                                    </td>
                                    {{/if}}
                                    {{#if (compare this.operatingStatus "Maintenance")}}
                                    <td style="color: #BABA20;">
                                        {{this.operatingStatus}}
                                    </td>
                                    {{/if}}
                                    <td class="text-right">
                                        <div class="dropdown">
                                            <a class="btn btn-sm btn-icon-only text-light" href="#" role="button"
                                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                                <a class="dropdown-item" href="/dashboard/{{this._id}}">Dashboard</a>
                                                <a class="dropdown-item" href="/table/{{this._id}}">Table</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer py-4">
                        <nav aria-label="...">
                            <ul class="pagination justify-content-end mb-0">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">
                                        <i class="fas fa-angle-left"></i>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                <li class="page-item active">
                                    <a class="page-link" href="#">1</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">
                                        <i class="fas fa-angle-right"></i>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer -->
        {{>footer}}
    </div>
</div>

<!-- Include scripts -->
<script>
    var lastestDatas = {{{ json lastestDatas }}}
    var turbines = {{{ json turbines }}}
    var lastestData = lastestDatas[0];
</script>
{{>scripts}}
<script src="/js/list.js"></script>
<script src="/js/header.js"></script>